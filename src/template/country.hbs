{{#each this}}
  <li class='projects-list__item'>
    <a class='projects-list__link' href='#'>
      <div class='projects-list__box'>
        <img
          class='projects-list__img'
          src='{{flags.svg}}'
          alt='{{name.official}}'
          width='200'
          height='100'
        />
        <p class='projects-list__description'>
          Population:
          {{population}}<br />
          Region:
          {{region}}</p>
      </div>
      <div class='projects-list__about'>
        <h2 class='projects-list__title'>{{name.official}}</h2>
        <span class='projects-list__service'>Capital: {{capital}}</span>
      </div>
    </a></li>
{{/each}}
